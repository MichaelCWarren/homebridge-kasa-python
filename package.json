    "python-kasa",
    "smarthome",
    "tplink",
    "tplink-kasa",
    "tplink-smarthome"
  ],
  "files": [
    "config.schema.json",
    "dist",
    "LICENSE",
    "requirements.txt"
  ],
  "devDependencies": {
    "@types/lodash.defaults": "^4.2.9",
    "@types/node": "^20.12.13",
    "@types/semver": "^7.5.8",
    "@typescript-eslint/eslint-plugin": "^7.11.0",
    "@typescript-eslint/parser": "^7.11.0",
    "eslint": "^8.57.0",
    "homebridge": "^1.8.2",
